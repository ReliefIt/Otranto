---
import CardAutos from "../components/CardAutos.astro";
import CardHogar from "../components/CardHogar.astro";
import CardMotos from "../components/CardMotos.astro";
import CardFabricas from "../components/CardFabricas.astro";
---

<section id= "slider"class="slider-container">
  <div class="slider">
    <a id="Hogar">
      <CardHogar />
    </a>
    <a id="Motos">
      <CardMotos />
    </a>
    <a id="Autos">
      <CardAutos />
    </a>
    <a id="Fabrica">
      <CardFabricas />
    </a>
  </div>

  <ul class="markers">
    <li><a href="#Hogar"></a></li>
    <li><a href="#Motos"></a></li>
    <li><a href="#Autos"></a></li>
    <li><a href="#Fabrica"></a></li>
  </ul>
</section>

<style>
  /* QUERY MODO DESKTOP*/

  section {
    timeline-scope: --carousel;
  }

  .markers li:nth-child(1) {
    --i: 1;
  }

  .markers li:nth-child(2) {
    --i: 2;
  }

  .markers li:nth-child(3) {
    --i: 3;
  }

  .markers li:nth-child(4) {
    --i: 4;
  }

  .slider-container {
    height: 410px;
  }

  .slider {
    scroll-timeline: --carousel x;
   
    display: flex;
    flex-direction: row;
    border-radius: 4px;
    height: 360px;
    width: 100%;
    aspect-ratio: 16/9;

    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;

    overflow-x: scroll;
    overflow-y: hidden;
  }

  .slider a {
    height: 360px;
  }

  .markers a {
    display: flex;
    width: 16px;
    aspect-ratio: 1;
    background: #696969;
    opacity: 0.7;
    border-radius: 50%;
    transition: all 0.5s ease;

    animation: activate linear;
    animation-timeline: --carousel;
    animation-range: calc((var(--i) - 1) * 25%) calc(var(--i) * 25% + 1px);
  }

  @keyframes activate {
    0%,
    100% {
      background: black;
      opacity: 1;
    }
  }

  .slider a {
    flex: 0 0 100%;
    width: 100%;
    scroll-snap-align: center;
  }

  .markers {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 0.25em;
    list-style: none;
    font-size: 2em;
    bottom: 5rem;
    margin: 0;
    padding: 0;
    height: 70px;
  }
  /* MEDIA QUERY MODO DESKTOP*/

  @media (min-width: 1440px) {
    .slider-container {
      height: 544px;
    }
    .slider {
      height: 544px;
    }
    .slider a {
      height: 544px;
    }
  }
</style>
